/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
}
.nav {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.nav-item {
  width: 50%;
  margin-top: 10rpx;
  display: inline-block;
  text-align: center;
}
.nav-item.active{
  color: red;
}
.tab-box{
  padding-top: 80rpx;
  height: 100%;
  box-sizing: border-box;
}
.tab-content{
  overflow-y: scroll;
}


.movable-area{
  pointer-events:none;
  z-index: 10;
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 20rpx;
}
.movable-view{ 
  pointer-events:auto;
  border-radius: 40px;
  height: 50px;
  width: 50px;
  background: white;
  margin-left: 600rpx;
  margin-top: 650rpx;
}

.add_view{
  pointer-events:auto;
  border-radius: 40px;
  height: 50px;
  width: 50px;
}




.add {
  position: fixed;
  height: 64px;
  width: 64px;
  bottom: 48rpx;
  right: 48rpx;
}

.circle {
  display: flex;
  width: 64rpx;
  height: 64rpx;
  border: 0 solid #ffffff;
  border-radius: 50px;
  font-size: 64rpx;
  color: white;
  justify-content: center;
  align-items: center;
  z-index: 3;
}





.item {
  background-color: #ffffff;
  margin-bottom: 15px
}
.content {
  padding: 15px;
}
