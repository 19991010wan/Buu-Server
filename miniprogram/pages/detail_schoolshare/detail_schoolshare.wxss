.ti-bottom {
  display: flex;
  justify-content: space-between
}
.ti-bottom .c-u-img {
  width: 26rpx;
  height: 26rpx;
}
.t-info .iconfont {
  vertical-align: middle;
  margin-right: 10rpx;
}
.comments {
  margin-top: 20rpx;
}

.content {
  word-break: break-all;
  font-size: 28rpx;
}

.item {
  display: flex;
  position: relative;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
}

.i-right {
  width: 100%;
}

.c-u-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.item .top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.item .u-name {
  color: deepskyblue;
  font-size: 28rpx;
}

.item .time {
  color: #888;
  font-size: 24rpx;
}

.comment-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.cf-bg {
  position: fixed;
  /* height: 200rpx; */
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: transparent;
  z-index: 99;
}

.cf-box {
  padding: 16rpx 10rpx;
  display: flex;
  justify-content: center;
}

