page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #FFCC00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}

.movable-area{
  pointer-events:none;
  z-index: 10;
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 20rpx;
}
.movable-view{ 
  pointer-events:auto;
  border-radius: 40px;
  height: 50px;
  width: 50px;
  background: white;
  margin-left: 600rpx;
  margin-top: 650rpx;
}

.add_view{
  pointer-events:auto;
  border-radius: 40px;
  height: 50px;
  width: 50px;
}


.add {
  position: fixed;
  height: 64px;
  width: 64px;
  bottom: 48rpx;
  right: 48rpx;
}

.circle {
  display: flex;
  width: 64rpx;
  height: 64rpx;
  border: 0 solid #ffffff;
  border-radius: 50px;
  font-size: 64rpx;
  color: white;
  justify-content: center;
  align-items: center;
  z-index: 3;
}






/* 包裹图片和两行文字 */

.view_tupian_wenzi {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  
  /* 圆角 */
  border-radius: 20rpx;

  /* 边 */
  border: 3rpx solid #E0E3DA;
  box-shadow:5rpx 5rpx 5rpx 5rpx #E0E3DA;

  background-color: #ffffff;
  margin: 30rpx;

  /* padding使得文字和图片不至于贴着边框 */
  padding: 30rpx;

}

/* 图片 */

.image_1 {
  width: 100rpx;
  height: 100rpx;
}

/* 包裹两行文字 */

.view_wenzi2 {
  width: 100%;
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
}

.text_zhuti{
  font-size: 30rpx;
  word-break: break-all;
  color: #7a7878;
  margin-top: 10rpx
}

/* 小字 */

.text_small {
  font-size: 40rpx;
  word-break: break-all;
  color: #7a7878;
  margin-top: 10rpx;
  display:-webkit-box;
  /* 表示几行后超出隐藏 */
  -webkit-line-clamp:1;
  /* 超出隐藏 */
  overflow:hidden;
  /*超出显示为省略号*/
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
}


.Rose-empty {
  padding: 2em;
  text-align: center;
  font-size: 14px;
  color: #666
}