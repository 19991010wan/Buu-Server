 /* miniprogram/pages/fb/fb.wxss */
 .pages{
  background-color:  #ffffff;
  width: 98%;
  margin: auto;
  overflow: hidden;
}


.section-line{
  /* 分界线 */
      width:90%;
      height:1rpx;
      background: #eeeeee;
      margin: 0 auto;
  }
.top{
  width: 100%;
  overflow: hidden;
  margin: auto;
  font-size: 50rpx;
  background-color: white;
  border-bottom: 1rpx solid rgba(117, 116, 116, 0.527);
}
.top_name{
  margin-left: 20rpx;
}
/* 图片 */
.images_box{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: white;
}
.img-box{
  border: 5rpx;
  /* border-style: solid; */
  /* border-color: rgba(0, 0, 0, 0.452); */
  width: 200rpx;
  height: 200rpx;
  margin-left: 35rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
/* 删除图片 */
.img-delect{
  width:50rpx;
  height:50rpx;
  border-radius:50%;
  position:absolute;
  right:-20rpx;
  top:-20rpx;
}
.img{
  width: 100%;
  height: 100%;
}


button{
  margin-top: 20rpx;
  background-color: #eb4450;
}
.radio-group{
  display: flex;
}

input {
  margin: 30rpx 0 30rpx 40rpx;
}