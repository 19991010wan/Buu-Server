<view class="container"> 
  <view class="login-icon"> 
    <image class="login-img" src="https://img.jbzj.com/file_images/article/201704/201741895802811.jpg"></image> 
  </view> 

  <view class="login-from"> 
  
  <!--账号--> 
  <view class="inputView"> 
    <image class="nameImage" src="https://img.jbzj.com/file_images/article/201704/2017041809555556.png"></image>
    <label class="loginLab">学号</label> 
    <input class="inputText" placeholder="请输入账号" value="{{stunum}}" bindinput="stunumInput" /> 
  </view>

  <view class="line"></view> 
  
  <!--密码--> 
  <view class="inputView"> 
    <image class="keyImage" src="https://img.jbzj.com/file_images/article/201704/2017041809555557.png"></image> 
    <label class="loginLab">密码</label> 
    <input class="inputText" password="true" placeholder="请输入密码" value="{{password}}" bindinput="passwordInput" /> 
  </view> 
  
  <!--按钮--> 
  <view class="loginBtnView" bindtap="login"> 
    <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}">登录</button> 
    </view> 
  </view> 
  <text class="stu-passwd">
    学号：201701、201702、201703、201704、201705
    密码：666666
  </text>
</view> 