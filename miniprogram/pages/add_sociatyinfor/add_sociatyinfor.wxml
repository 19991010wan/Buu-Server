<view class='pages'>
  <form bindsubmit="onSave">
    <input value="{{textVal_biaoti}}" bindinput="handletext_biaotiinput" placeholder="文章标题"/>

    <view class='section-line'></view>

    <textarea value="{{textVal_neirong}}" bindinput="handletext_neironginput" name="opinion" placeholder="消息内容" />

    <view class='section-line'></view>

    <view class="content">
      <button bindtap='fb' class="fb">发布</button>
    </view>

    <view class="bottom">
        <button class="btn_tuichu" hover-class="none" bindtap="loginback">
          退出登录
        </button>
    </view>
  </form>
</view>